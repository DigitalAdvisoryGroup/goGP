<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_partner_shirt_type_tree" model="ir.ui.view">
        <field name="name">partner.shirt.type.tree</field>
        <field name="model">partner.shirt.size</field>
        <field name="arch" type="xml">
            <tree string="shirt type" multi_edit="1" sample="1">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_shirt_type_filter" model="ir.ui.view">
        <field name="name">partner.shirt.type.filter</field>
        <field name="model">partner.shirt.size</field>
        <field name="arch" type="xml">
            <search string="shirt type">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_partner_shirt_type_form" model="ir.ui.view">
        <field name="name">partner.shirt.type.form</field>
        <field name="model">partner.shirt.size</field>
        <field name="arch" type="xml">
            <form string="shirt type">
                <sheet>
                    <div class="oe_title">

                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Petrol"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partner_shirt_type" model="ir.actions.act_window">
        <field name="name">shirt type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.shirt.size</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_partner_shirt_type_filter"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new document!
                </p>
            </field>
    </record>


</odoo>