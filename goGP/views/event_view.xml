<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="event_event_view_form" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit.website</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <field name="menu_register_cta" position="after">
                <label for="is_login_req" string="Login Required"/>
                <field name="is_login_req"/>
            </field>

        </field>
    </record>

    <record id="event_event_ticket_view_tree" model="ir.ui.view">
        <field name="name">event.event.ticket.view.tree</field>
        <field name="model">event.event.ticket</field>
        <field name="inherit_id" ref="event.event_event_ticket_view_tree_from_event"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="sequence" widget="handle"/>
            </field>
            <field name="seats_max" position="before">
                <field name="max_purchase" />
            </field>

        </field>
    </record>


    <record id="event_sale.event_sale_product_template_form" model="ir.ui.view">
             <field name="name">product.template.event.form.inherit</field>
             <field name="model">product.template</field>
             <field name="inherit_id" ref="product.product_template_form_view" />
             <field name="arch" type="xml">
                <group name="sale" position="inside">
                    <group string="Events">
                        <field name="event_ok" />
                        <field name="max_purchase" />
                    </group>
                </group>
             </field>
        </record>

    <!-- Error: auth required  -->
    <template id="event_auth_required" name="Event: login required">
        <t t-call="website_event.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Login required</h1>
                        <p>This event is open only to registered people. Please
                            <a t-att-href="redirect_url">log in</a>.
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>