<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="event_event_view_form" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit.website</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <field name="menu_register_cta" position="after">
                <label for="is_login_req" string="Login Required"/>
                <field name="is_login_req"/>
            </field>

        </field>
    </record>

    <record id="event_event_ticket_view_tree" model="ir.ui.view">
        <field name="name">event.event.ticket.view.tree</field>
        <field name="model">event.event.ticket</field>
        <field name="inherit_id" ref="event.event_event_ticket_view_tree_from_event"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="sequence" widget="handle"/>
            </field>
            <field name="product_id" position="after">
                <field name="is_exclusive" />
                <field name="is_registered" />
            </field>
        </field>
    </record>
    <record id="gogp_product_template_form" model="ir.ui.view">
             <field name="name">product.template.event.form.inherit</field>
             <field name="model">product.template</field>
             <field name="inherit_id" ref="product.product_template_form_view" />
             <field name="arch" type="xml">
                 <field name="event_ok" position="after">
                     <field name="is_exclusive" />
                 </field>
             </field>
        </record>

    <record id="product_pricelist_item_tree_view_from_product_gogp" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.tree</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
        <field name="arch" type="xml">
            <field name="fixed_price" position="after">
                <field name="membership_ids" widget="many2many_tags" optional="show"/>
            </field>
        </field>
    </record>



    <!-- Error: auth required  -->
    <template id="event_auth_required" name="Event: login required">
        <t t-call="website_event.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Login required</h1>
                        <p>This event is open only to registered people. Please
                            <a t-att-href="redirect_url">log in</a>.
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="registration_template_gogp" name="Registration" inherit_id="website_event.registration_template">
        <xpath expr='//t[@t-set="tickets"]' position="replace">
            <t t-set="tickets" t-value="event.event_ticket_ids.filtered(lambda ticket: not ticket.is_expired and not ticket.is_registered)"/>
        </xpath>
    </template>

    <template id="portal_layout_gogp" name="Portal layout : goGP" inherit_id="portal.portal_layout" >
        <xpath expr="//div[hasclass('o_my_sidebar')]" position="replace">
            <div class="col-12 col-md col-lg-6 oe_structure"></div>
        </xpath>
    </template>


    <template id="portal_my_home_menu_gogp" name="Portal layout : goGP menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'myevent'" t-attf-class="breadcrumb-item #{'active ' if not myevent else ''}">
                My Events
            </li>
            <li t-if="page_name == 'myvehicle'" t-attf-class="breadcrumb-item #{'active ' if not myvehicle else ''}">
                My Vehicles
            </li>
            <li t-if="page_name == 'mysg'" t-attf-class="breadcrumb-item #{'active ' if not mysg else ''}">
                My Groups
            </li>
        </xpath>
    </template>


    <template id="portal_my_home_gogp" name="Show goGP Details" customize_show="True" inherit_id="portal.portal_my_home" priority="1">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">

            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Account</t>
                <t t-set="url" t-value="'/my/account'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Groups</t>
                <t t-set="url" t-value="'/my/gogp/groups'"/>
                <t t-set="placeholder_count" t-value="'mygroups_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Vehicles</t>
                <t t-set="url" t-value="'/my/gogp/vehicles'"/>
                <t t-set="placeholder_count" t-value="'myvehicle_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Events</t>
                <t t-set="url" t-value="'/my/gogp/events'"/>
                <t t-set="placeholder_count" t-value="'myevent_count'"/>
            </t>


            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Security</t>
                <t t-set="url" t-value="'/my/security'"/>
            </t>

        </xpath>
    </template>


    <template id="portal_my_gogp_events" name="My goGP Events">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Events</t>
            </t>
            <t t-if="not myevents">
                <p>There are currently no events for your account.</p>
            </t>
            <t t-if="myevents" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Event</th>
                        <th class="text-left">Vehicle</th>
                        <th class="text-left">Image</th>
                        <th class="text-left"></th>
                    </tr>
                </thead>
                <t t-foreach="myevents" t-as="myevent">
                    <tr>
                        <td class="text-left"><span t-field="myevent.event_id.name"/></td>
                        <td class="text-left"><span t-field="myevent.vehicle_id.brand_id.name"/>-<span t-field="myevent.vehicle_id.model_id.name"/></td>
                        <td class="text-left"><img alt="Avatar" t-attf-src="/web/image/gogp.vehicles/#{myevent.vehicle_id.id}/image_128/50x50" /></td>
                        <td class="text-right">
                            <a t-att-href="'/my/gogp/event/%s' % (slug(myevent))" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="portal_my_gogp_event_details" name="My goGP Event Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Event Details</t>
            </t>
            <form t-att-action="'/my/gogp/event/%s' % (slug(myevent))" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="row o_portal_details">
                    <div class="col-lg-8">
                        <div class="row">
                            <div t-attf-class="form-group #{error.get('vehicle_id') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="vehicle_id">Vehicle</label>
                                <select name="vehicle_id" t-attf-class="form-control #{error.get('vehicle_id') and 'is-invalid' or ''}">
                                    <option value="">Vehicle...</option>
                                    <t t-foreach="vehicles or []" t-as="vehicle">
                                        <option t-att-value="vehicle.id" >
                                            <t t-esc="vehicle.brand_id.name" />-<t t-esc="vehicle.model_id.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                        <div class="clearfix">
                            <button type="submit" class="btn btn-primary float-right mb32 ">
                                Confirm
                                <span class="fa fa-long-arrow-right" />
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </t>
    </template>

    <template id="portal_my_gogp_vehicles" name="My goGP Vehicles">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Vehicles</t>
            </t>
            <t t-if="not myvehicles">
                <p>There are currently no vehicle for your account.</p>
            </t>
            <t t-if="myvehicles" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Brand</th>
                        <th class="text-left">Model</th>
                        <th></th>
                    </tr>
                </thead>
                <t t-foreach="myvehicles" t-as="myvehicle">
                    <tr>
                        <td class="text-left"><span t-field="myvehicle.brand_id.name"/></td>
                        <td class="text-left"><span t-field="myvehicle.model_id.name"/></td>
                        <td class="text-right">
                            <a t-att-href="'/my/gogp/vehicle/%s' % (slug(myvehicle))" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>


    <template id="portal_my_gogp_vehicle_details" name="My goGP Vehicle Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Vehicle Details</t>
            </t>
            <form t-att-action="'/my/gogp/vehicle/%s' % (slug(vehicles))" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="row o_portal_details">
                    <div class="col-lg-8">
                        <div class="row">
                            <div t-attf-class="form-group #{error.get('vehicle_brands') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="brand_id">Brand</label>
                                <select name="brand_id" t-attf-class="form-control #{error.get('brand_id') and 'is-invalid' or ''}">
                                    <option value="">Country...</option>
                                    <t t-foreach="vehicle_brands or []" t-as="brand">
                                        <option t-att-value="brand.id" t-att-selected="brand.id == int(brand_id) if brand_id else brand.id == vehicles.brand_id.id">
                                            <t t-esc="brand.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div t-attf-class="form-group #{error.get('vehicle_models') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="model_id">Model</label>
                                <select name="model_id" t-attf-class="form-control #{error.get('model_id') and 'is-invalid' or ''}">
                                    <option value="">Models...</option>
                                    <t t-foreach="vehicle_models or []" t-as="model">
                                        <option t-att-value="model.id" t-att-selected="model.id == int(model_id) if model_id else model.id == vehicles.model_id.id">
                                            <t t-esc="model.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div t-attf-class="form-group #{error.get('vehicle_models_type') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="fuel_type_id">Vehicle Type</label>
                                <select name="vehicle_type_id" t-attf-class="form-control #{error.get('vehicle_type_id') and 'is-invalid' or ''}">
                                    <option value="">Vehicle Type...</option>
                                    <t t-foreach="vehicle_models_type or []" t-as="vehicle_type">
                                        <option t-att-value="vehicle_type.id" t-att-selected="vehicle_type.id == int(vehicle_type_id) if vehicle_type_id else vehicle_type.id == vehicles.vehicle_type_id.id">
                                            <t t-esc="vehicle_type.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div t-attf-class="form-group #{error.get('vehicle_fuel_type') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="fuel_type_id">Fuel Type</label>
                                <select name="fuel_type_id" t-attf-class="form-control #{error.get('fuel_type_id') and 'is-invalid' or ''}">
                                    <option value="">Fuel Type...</option>
                                    <t t-foreach="vehicle_fuel_type or []" t-as="fuel_type">
                                        <option t-att-value="fuel_type.id" t-att-selected="fuel_type.id == int(fuel_type_id) if fuel_type_id else fuel_type.id == vehicles.fuel_type_id.id">
                                            <t t-esc="fuel_type.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="clearfix" />
                            <div t-attf-class="form-group #{error.get('license_plate') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="street">License Plate</label>
                                <input type="text" name="license_plate" t-attf-class="form-control #{error.get('license_plate') and 'is-invalid' or ''}" t-att-value="license_plate or vehicles.license_plate"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('location') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="street">Location</label>
                                <input type="text" name="location" t-attf-class="form-control #{error.get('location') and 'is-invalid' or ''}" t-att-value="location or vehicles.location"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('color') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="street">Color</label>
                                <input type="text" name="color" t-attf-class="form-control #{error.get('color') and 'is-invalid' or ''}" t-att-value="color or vehicles.color"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('model_year') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="street">Model Year</label>
                                <input type="text" name="model_year" t-attf-class="form-control #{error.get('model_year') and 'is-invalid' or ''}" t-att-value="model_year or vehicles.model_year"/>
                            </div>
                        </div>
                        <div class="clearfix">
                            <button type="submit" class="btn btn-primary float-right mb32 ">
                                Confirm
                                <span class="fa fa-long-arrow-right" />
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </t>
    </template>


    <template id="portal_my_gogp_groups" name="My goGP Groups">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">My Groups</t>
            </t>
            <t t-if="not mygroups">
                <p>There are currently no groups for your account.</p>
            </t>
            <t t-if="mygroups" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Name</th>
                        <th class="text-left">Type</th>
                        <th class="text-left">Description</th>
                    </tr>
                </thead>
                <t t-foreach="mygroups" t-as="mygroup">
                    <tr>
                        <td class="text-left"><span t-field="mygroup.name"/></td>
                        <td class="text-left"><span t-field="mygroup.type.name"/></td>
                        <td class="text-left"><span t-field="mygroup.description"/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>


</odoo>